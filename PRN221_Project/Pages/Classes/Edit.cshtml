@page "/Edit"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PRN221_Project.Pages.Classes.EditModel
@{
    var calendar = Model.Calendar;
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Edit</h1>

        <form method="post">
            <input type="hidden" />
            <div class="form-group">
                <label for="txtClass">Class:</label>
                <input type="text" class="form-control" id="txtClass" name="txtClass" value="@calendar.Class" />
            </div>
            <div class="form-group">
                <label for="txtSubject">Subject:</label>
                <input type="text" class="form-control" id="txtSubject" name="txtSubject" value="@calendar.Subject" />
            </div>
            <div class="form-group">
                <label for="txtTeacher">Teacher:</label>
                <input type="text" class="form-control" id="txtTeacher" name="txtTeacher" value="@calendar.Teacher" />
            </div>
            <div class="form-group">
                <label for="txtRoom">Room:</label>
                <input type="text" class="form-control" id="txtRoom" name="txtRoom" value="@calendar.Room" />
            </div>
            <div class="form-group">
                <label for="txtTime">Time Slot:</label>
                <input type="text" class="form-control" id="txtTime" name="txtTime" value="@calendar.TimeSlot" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>