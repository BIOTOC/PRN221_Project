@page "/TimeTable"
@model PRN221_Project.Pages.Classes.TimeTableModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClassTimeTable</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Schedule</h1>
        <div class="mb-3">
            <label for="classSelect" class="form-label">Select Class:</label>
            <select class="form-select" id="classSelect">
                <option value="">-- Select Class --</option>
                @foreach (var uniqueClass in Model.Calendars.Select(c => c.Class).Distinct())
                {
                    <option value="@uniqueClass">@uniqueClass</option>
                }
            </select>
        </div>
        <table class="table" id="classTimeTable">
            <thead>
                <tr>
                    <th></th>
                    <th scope="col">Monday</th>
                    <th scope="col">Tuesday</th>
                    <th scope="col">Wednesday</th>
                    <th scope="col">Thursday</th>
                    <th scope="col">Friday</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Calendars)
                {
                    string letter = item.TimeSlot.Substring(0, 1);
                    string num1 = item.TimeSlot.Substring(1, 1);
                    string num2 = item.TimeSlot.Substring(2, 1);

                    @if (letter.Equals("A"))
                    {
                        <tr>
                            <td>Slot 1 - @item.Class</td>
                            @if (num1.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                        <tr>
                            <td>Slot 2 - @item.Class</td>
                            @if (num2.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }

                    @if (letter.Equals("P"))
                    {
                        <tr>
                            <td>Slot 3 - @item.Class</td>
                            @if (num1.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                        <tr>
                            <td>Slot 4 - @item.Class</td>
                            @if (num2.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById("classSelect").addEventListener("change", function () {
            var selectedClass = this.value;
            var rows = document.querySelectorAll("#classTimeTable tbody tr");
            rows.forEach(function (row) {
                var classCell = row.cells[0].innerText;
                if (classCell.includes(selectedClass) || selectedClass === "") {
                    row.style.display = "table-row";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
</body>

