@page "/TimeTable"
@model PRN221_Project.Pages.Classes.TimeTableModel
@using  PRN221_Project.Models
@{
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClassTimeTable</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Schedule</h1>
        <div class="mb-3">
            <label for="classSelect" class="form-label">Select Class:</label>
            <select class="form-select" id="classSelect">
                <option value="">-- Select Class --</option>
                @foreach (var uniqueRoom in Model.Calendars.Select(c => c.Class).Distinct())
                {
                    <option value="@uniqueRoom">@uniqueRoom</option>
                }
            </select>
        </div>
        <table class="table" id="classTimeTable">
            <thead>
                <tr>
                    <th></th>
                    <th scope="col">Monday</th>
                    <th scope="col">Tuesday</th>
                    <th scope="col">Wednesday</th>
                    <th scope="col">Thursday</th>
                    <th scope="col">Friday</th>
                </tr>
            </thead>
            <tbody>
               
                @for(int i = 1; i <=4;i++){
                    <tr>
                        <td>Slot @i</td>
                    @for(int j = 2; j <= 6; j++)
                    {
                        var key = Tuple.Create(i, j);
                        Calender2 calender2 = new Calender2();
                        if(Model.TimeSlot.TryGetValue(key,out calender2))
                        {
                            <td>@calender2.Teacher <br /> @calender2.Room<br />@calender2.Subject</td>
                        }else{
                            <td></td>
                        }
                    }
                    </tr>

                }
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById("classSelect").addEventListener("change", function () {
            var selectedClass = this.value;
            var rows = document.querySelectorAll("#classTimeTable tbody tr");
            rows.forEach(function (row) {
                var classCell = row.cells[0].innerText;
                if (classCell.includes(selectedClass) || selectedClass === "") {
                    row.style.display = "table-row";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
</body>