@page "/TimeTable"
@model PRN221_Project.Pages.Classes.TimeTableModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClassTimeTable</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th scope="col">Monday</th>
                    <th scope="col">Tuesday</th>
                    <th scope="col">Wednesday</th>
                    <th scope="col">Thursday</th>
                    <th scope="col">Friday</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Calendars)
                {
                    string letter = item.TimeSlot.Substring(0, 1);
                    string num1 = item.TimeSlot.Substring(1, 1);
                    string num2 = item.TimeSlot.Substring(2, 1);

                    @if (letter.Equals("A"))
                    {
                        <tr>
                            <td>Slot 1</td>
                            @if (num1.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num1.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                        <tr>
                            <td>Slot 2</td>
                            @if (num2.Equals("2"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("3"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("4"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("5"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (num2.Equals("6"))
                            {
                                <td>@item.Teacher - @item.Room - @item.Subject</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }

                    @if (letter.Equals("P"))
                    {
                        <tr>
                            <td>Slot 3</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Slot 4</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
